datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId    Int      @unique
  username      String?
  firstName     String?
  lastName      String?
  points        Int      @default(0)
  claimedButton1 Boolean @default(false) // For button 1 claimed status
  claimedButton2 Boolean @default(false) // For button 2 claimed status
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model JoinedUser {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId Int      @unique // Unique Telegram ID for each user
  username  String?
  joinedAt  DateTime @default(now()) // Timestamp for when the user joined
}
