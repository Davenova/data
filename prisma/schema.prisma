datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId    Int      @unique
  username      String?
  firstName     String?
  lastName      String?
  points        Int      @default(0)
  button1Claimed Boolean  @default(false) // Track if button 1 is claimed
  button2Claimed Boolean  @default(false) // Track if button 2 is claimed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
